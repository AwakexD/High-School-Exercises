@using System.Security.Claims
@model WebMusicApp.Data.Entities.Album

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card mb-4">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.Picture" class="img-fluid rounded-start" alt="@Model.Name">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h4 class="card-title">@Model.Name</h4>
                    <p class="card-text"><strong>Category:</strong> @Model.Category</p>
                    <p class="card-text"><strong>Singers:</strong> @Model.Singers</p>
                    <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                    <p class="card-text"><strong>Price:</strong> $@Model.Price</p>
                    <p class="card-text"><strong>Quantity:</strong> @Model.Quantity</p>
                    <div class="mt-4">
                        @if (Model.Creator == this.User.FindFirstValue(ClaimTypes.NameIdentifier))
                        {
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
                        }
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>